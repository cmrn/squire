<resources xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Application theme. -->
    <style name="AppThemeLight" parent="Holo.Theme.Light.DarkActionBar">
        <item name="menu_edit_icon">@drawable/edit_dark</item>
        <item name="menu_done_icon">@drawable/done_dark</item>
        <item name="menu_new_icon">@drawable/new_dark</item>
        <item name="new_icon">@drawable/new_light</item>
        <item name="discard_icon">@drawable/discard_light</item>
        <item name="remove_icon">@drawable/remove_light</item>
        <item name="drag_handle_icon">@drawable/drag_handle_light</item>
        <item name="bottom_bar_drawable">@drawable/bottom_bar_light</item>
	    <item name="positive_stat_color">#0a0</item>
	    <item name="negative_stat_color">#a00</item>
	    <item name="default_stat_color">#555</item>
	    <item name="dialog_title_color">#ff33b6e5</item>
    </style>
    
    <style name="AppThemeDark" parent="Holo.Theme">
        <item name="menu_edit_icon">@drawable/edit_dark</item>
        <item name="menu_done_icon">@drawable/done_dark</item>
        <item name="menu_new_icon">@drawable/new_dark</item>
        <item name="new_icon">@drawable/new_dark</item>
        <item name="discard_icon">@drawable/discard_dark</item>
        <item name="remove_icon">@drawable/remove_dark</item>
        <item name="drag_handle_icon">@drawable/drag_handle_dark</item>
        <item name="bottom_bar_drawable">@drawable/bottom_bar_dark</item>
	    <item name="positive_stat_color">#3b3</item>
	    <item name="negative_stat_color">#b33</item>
	    <item name="default_stat_color">#bbb</item>
	    <item name="dialog_title_color">#ff0099cc</item>
    </style>
    
    <style name="stat_number">
        <item name="android:textSize">48sp</item>
    </style>
    
    <style name="stat_suffix">
        <item name="android:textSize">40sp</item>
    </style>
    
    <style name="stat_sign">
        <item name="android:textSize">48sp</item>
    </style>
    
    <style name="new_button">
        <item name="android:background">?attr/bottom_bar_drawable</item>
        <item name="android:layout_height">@dimen/bottom_bar_height</item>
    </style>

</resources>