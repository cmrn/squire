<resources xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Application theme. -->
    <style name="Material" parent="@style/Theme.Material">
        <item name="menu_edit_icon">@drawable/edit_dark</item>
        <item name="menu_done_icon">@drawable/done_dark</item>
        <item name="menu_new_icon">@drawable/new_dark</item>
        <item name="new_icon">@drawable/new_light</item>
        <item name="discard_icon">@drawable/discard_light</item>
        <item name="remove_icon">@drawable/remove_light</item>
        <item name="drag_handle_icon">@drawable/drag_handle_light</item>
        <item name="bottom_bar_drawable">@drawable/bottom_bar_light</item>
	    <item name="positive_stat_color">#0a0</item>
	    <item name="negative_stat_color">#a00</item>
	    <item name="default_stat_color">@color/text_dark_secondary</item>
	    <item name="dialog_title_color">#ff33b6e5</item>

        <item name="android:actionBarStyle">@style/ActionBar.Solid.Material.Custom</item>
        <item name="android:actionBarTabTextStyle">@style/ActionBar.TabText.Material.Custom</item>
    </style>

    <style name="ActionBar.Solid.Material.Custom" parent="@style/ActionBar.Solid.Material">
        <item name="android:titleTextStyle">@style/ActionBar.Title.Material.Custom</item>
    </style>
    <style name="ActionBar.Title.Material.Custom" parent="@android:style/TextAppearance.Holo.Widget.ActionBar.Title">
        <item name="android:textColor">@color/text_light_primary</item>
    </style>
    <style name="ActionBar.TabText.Material.Custom" parent="@android:style/Widget.Holo.ActionBar.TabText">
        <item name="android:textColor">@color/text_light_primary</item>
    </style>

    <style name="TextAppearance.Headline.Common" parent="@android:style/TextAppearance.Large">
        <item name="android:textSize">24sp</item>
        <item name="android:textColor">@color/text_dark_primary</item>
    </style>

    <style name="TextAppearance.Title.Common" parent="@android:style/TextAppearance.Large">
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">@color/text_dark_primary</item>
    </style>

    <style name="TextAppearance.Subhead.Common" parent="@android:style/TextAppearance.Medium">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/text_dark_primary</item>
    </style>

    <style name="TextAppearance.Body.Common" parent="@android:style/TextAppearance.Medium">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/text_dark_primary</item>
    </style>

    <style name="TextAppearance.Caption.Common" parent="@android:style/TextAppearance.Small">
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">@color/text_dark_secondary</item>
    </style>

    <style name="TextAppearance.Menu.Common" parent="@android:style/TextAppearance.Medium">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/text_dark_primary</item>
    </style>

    <style name="stat_name.Common" parent="@style/TextAppearance.Title">
    </style>

    <style name="stat_number.Common" parent="@android:style/TextAppearance.Large">
        <item name="android:textSize">45sp</item>
        <item name="android:textColor">?attr/default_stat_color</item>
    </style>
    
    <style name="stat_suffix.Common" parent="@android:style/TextAppearance.Large">
        <item name="android:textSize">34sp</item>
        <item name="android:textColor">?attr/default_stat_color</item>
    </style>
    
    <style name="stat_sign.Common" parent="@android:style/TextAppearance.Large">
        <item name="android:textSize">45sp</item>
        <item name="android:textColor">?attr/default_stat_color</item>
    </style>
    
    <style name="new_button">
        <item name="android:background">?attr/bottom_bar_drawable</item>
        <item name="android:layout_height">@dimen/bottom_bar_height</item>
    </style>

</resources>